/*数据绑定*/
.courseItem{
  height: 120px;
  border-bottom: 5px solid red;
  display: flex;
}
.courseItem.Star{
  border-bottom-color: gold ;
}
.courseItem .fm{
  width: 150px;
  height: 100px;
  background-color: orange;
  margin: 10px;
  margin-right: 0;
}
.courseItem .fm image{
  width: 100%;
  height: 100%;
}
.courseItem .desc{
  flex: 1;
  /*background-color: cyan;*/
  padding: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.courseItem .desc text{
  font-size: 13px;
 
}
.courseItem .desc .isStar{
  color: tomato;
  font-weight: bold;
}
.courseItem .desc .courseTitle{
  font-size: 15px;
  font-weight: bold;
}
.courseItem .desc .courseTeacher{
  color: gray;
}
.courseItem .desc .courseStudyCount{
  color: red;
}