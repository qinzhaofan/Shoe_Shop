}
/*scroll滚动标题*/
.page-group{
  height: 35px;
  display: table;
  width: 100%;
  table-layout: fixed;
  top: 0;
  left: 0;
 /* position: fixed;*/
  z-index:1;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
}

.page-nav-list{
  padding:10rpx 0 ;
  display: table-cell;
  color: rgb(128, 128, 128);
  z-index:1;
}