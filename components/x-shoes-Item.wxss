.shoesItem{
  /*border:1px solid gold;
  border-radius: 5px;*/
  width: 340rpx;
  height: 500rpx;
  font-size: 14px;
  background:white;
  color: gray;
  padding-top: 20px;
  margin: 8px 0;
  border-radius: 10px;
}
.shoesItem image{
  width: 340rpx;
  height: 300rpx;
  box-sizing: border-box;
}
.shoesItem text{
  display: block;  
  padding-left: 10px;
  margin-top: 3px;
}
.shoesItem .type{
  font-weight: bold;
  font-size: 16px;
  color: black;
  display: inline;
}
.shoesItem .model{
  display: inline;
}
.shoesItem .price{
  display: inline;
  color: red;
}
.shoesItem .priceweight{
  display: inline;
  color: red;
  font-weight: bold;
}
/*画面抖动*/
.deleteItem{
  animation: It-dou 1s 0s infinite;/*抖动1秒 延迟0 infinite无限循环*/
}
@keyframes It-dou{
  0% {
    transform: rotate(0deg);
  }
  10%,20%,30% {
    transform: rotate(-4deg);
  }
  15%,25%,35%{
    transform: rotate(4deg);
  }
  40%{
    transform: rotate(-2deg);
  }
  45%{
    transform: rotate(2deg);
  }
  50%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(0deg);
  }
}